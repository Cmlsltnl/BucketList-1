
<h1 class='text-center bucket-header martop'>All Adventures</h1>

<% if !@adventures.nil? %>
  <% if !@adventures.empty? %>
    <% @adventures.each do |adventure| %>
    <div class="container-fluid">
        <div class="row">
            <div class="bucket col-md-3 col-sm-4 col-xs-12">
              <div class="tip" >
                  <div class="handle"></div>
                    <div class="img_tip" data-toggle="modal" data-target="#myModal<%= adventure.id %>">
                        <%= image_tag (adventure.image.url(:large)), :class => "image_tip" %>
                    </div><!--end of img_tip-->
              </div><!--end of tip-->
              <h4 data-toggle="modal" data-target="#myModal<%= adventure.id %>"><%= adventure.title.upcase %></h4>
            </div><!--End of Bucket List Loop Columns-->

    <!--Modal Action-->
    <div class="modal fade" id="myModal<%= adventure.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title black-text" id="myModal<%= adventure.id %>"><%= adventure.title %></h4>
          </div>
          <div class="modal-body text-center">
            <p id="notice"><%= notice %></p>
            <%= image_tag(adventure.image.url(:med)) %>
            <p><strong>Title:</strong>
              <%= adventure.title %></p>
            <p><strong>Description:</strong>
              <%= adventure.description %></p>
            <p><strong>Creator:</strong>
              <%= adventure.creator %></p>
            <p><%= link_to 'View This Adventure', adventure, class:"btn btn-buckets" %></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <% end %>

  <% else %>
    <h3 class="text-center">There are no buckets. Go out there and live, man!</h3>
  <% end %>
  </div>
<% end %>

<div class="container text-right"><h4><%= will_paginate @adventures %></h4></div>
