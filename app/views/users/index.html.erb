<% provide(:title, 'All Users') %>

<h1 class="text-center martop">All Users</h1>
<div class="container">
  <div class="row">
    <% @users.each do |f| %>
      <div class="user-box col-md-3 text-center">
        <div class="user-pic">
          <a href="/users/<%= f.id %>" class="transparent">
            <% if f.image.blank? %>
              <img src="/system/person-placeholder.jpg" class="user-search-image"/>
            <% else %>
              <%= image_tag f.image.url(:large), class: "user-search-image" %>
            <% end %>
          </a>
        <a href="/users/<%= f.id %>"><h4><%= f.first_name %> <%= f.last_name %></a></h4>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container text-right"><h4><%= will_paginate @users %></h4></div>
