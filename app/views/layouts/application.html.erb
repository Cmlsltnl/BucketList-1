<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.min.js"></script>
  <!-- <script type="text/javascript">
    $(function ()
      { $("#myModal").modal({show:false });
  </script> -->
  <title>Bucketlist</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render "users/login_modal" %>
<%= render "users/sign_up_modal" %>

<!-- Navigation  -->
  <% if user_signed_in? %>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span class="navbar-brand">
          <%= link_to root_path do %>
            <img src ="css/bucketlist_images/tiny_paint_icon.png"
          <% end %>
        </span>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active">
            <%= link_to "Search Adventures!", adventures_search_adventures_path %>
            <span class="sr-only">(current)</span></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Your Profile <span class="caret"></span></a>
            <ul class="dropdown-menu">


              <li><%=link_to 'View Follows', users_show_followPage_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>

              <li role="separator" class="divider"></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">Link</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
              <li><%= link_to 'View Profile', users_show_path %></li>
              <li><%=link_to 'View Follows', users_show_followPage_path %></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Separated link</a></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

<% end %>
<!-- End Navigation  -->





  <div class="wrapper" id="wrapper">
    <div id="user_nav">
      <% if user_signed_in? %>
        <h5 class="visible-*-inline">Hello <strong><%= current_user.first_name %> <%= current_user.last_name %></h5>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-default" %>
        <%= link_to 'View Profile', users_show_path, class: "btn btn-default" %>
        <%= link_to 'Friends', users_show_followPage_path, class: "btn btn-default" %>  
        <%= link_to "Bucket Search", adventures_search_adventures_path, class: "btn btn-default" %>
        <%= link_to "User Search", users_search_users_path, class: "btn btn-default" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-default" %>
        <%= link_to "Home", root_path, class: "btn btn-default" %>
        <%= link_to "Login", "#login", "data-toggle" => "modal", :class => 'btn btn-default' %>

      <% else %>
      <%= link_to "Login", "#login", "data-toggle" => "modal", :class => 'btn btn-default' %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default" %>
        <%= link_to "Login", new_user_session_path, class: "btn btn-default" %>
        <%= link_to "Bucket Search", adventures_search_adventures_path, class: "btn btn-default" %>
        <%= link_to "User Search", users_search_users_path, class: "btn btn-default" %>
        <%= link_to "Home", root_path, class: "btn btn-default" %>
      <% end %>
    </div>

    <%= yield %>
  </div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

</body>
</html>
